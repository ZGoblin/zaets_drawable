<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape>
            <stroke android:color="@android:color/holo_orange_dark" android:width="4dp"/>
            <gradient android:type="linear" android:startColor="@android:color/holo_orange_light" android:endColor="@color/black" android:centerColor="@color/teal_700"/>
            <corners android:radius="16dp"/>
        </shape>
    </item>
    <item android:state_pressed="false">
        <shape>
            <stroke android:color="@android:color/holo_orange_dark" android:width="4dp"/>
            <gradient android:type="linear" android:startColor="@color/white" android:endColor="@color/purple_700" android:centerColor="@color/teal_700"/>
            <corners android:radius="16dp"/>
        </shape>
    </item>
</selector>